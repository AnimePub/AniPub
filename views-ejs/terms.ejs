            margin-top: 60px;
            padding: 32px;
            background: linear-gradient(135deg, var(--dark3), var(--dark4));
            border: 1px solid var(--border);
            border-radius: 18px;
            text-align: center;
            box-shadow: 0 20px 60px rgba(0,0,0,0.5);
        }

        .contact-section h2 {
            margin-top: 0;
            justify-content: center;
        }

        .contact-section h2::before {
            display: none;
        }

        .contact-links {
            display: flex;
            gap: 16px;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .contact-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 24px;
            background: var(--dark5);
            border: 1px solid var(--border);
            border-radius: 50px;
            color: var(--text);
            text-decoration: none;
            font-weight: 700;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .contact-btn:hover {
            background: var(--blue);
            border-color: var(--blue);
            transform: translateY(-2px);
            box-shadow: 0 8px 28px rgba(26,140,255,0.4);
        }

        .contact-btn i {
            font-size: 1.1rem;
        }

        /* Closing Statement */
        .closing-statement {
            margin-top: 60px;
            padding: 32px;
            background: rgba(26,140,255,0.05);
            border: 2px solid rgba(26,140,255,0.3);
            border-radius: 16px;
            text-align: center;
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text);
            font-weight: 600;
            box-shadow: 0 12px 40px rgba(26,140,255,0.1);
        }

       

        /* Scroll Reveal */
        .reveal {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.7s ease, transform 0.7s ease;
        }

        .reveal.visible {
            opacity: 1;
            transform: translateY(0);
        }

