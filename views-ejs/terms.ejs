        .anime-character {
            position: fixed;
            font-size: clamp(3rem, 8vw, 6rem);
            color: rgba(26,140,255,0.08);
            pointer-events: none;
            z-index: 0;
            animation: float 6s ease-in-out infinite;
        }

        .char-1 {
            top: 15%;
            right: 10%;
            animation-delay: 0s;
        }

        .char-2 {
            bottom: 20%;
            left: 8%;
            animation-delay: 3s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

