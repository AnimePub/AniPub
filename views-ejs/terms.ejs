            position: relative;
            z-index: 1;
            max-width: 900px;
            margin: 0 auto;
            padding: clamp(80px, 10vw, 120px) clamp(20px, 5vw, 40px) clamp(60px, 8vw, 100px);
        }

        /* Hero Section */
        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(26,140,255,0.12);
            border: 1px solid rgba(26,140,255,0.35);
            border-radius: 50px;
            padding: 6px 18px;
            font-size: 0.72rem;
            font-weight: 800;
            color: var(--blue);
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 20px;
        }


        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(28px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h1 {
            font-family: var(--font-display);
            font-size: clamp(2.5rem, 7vw, 4.5rem);
            letter-spacing: 3px;
            line-height: 1.1;
            margin-bottom: 16px;
            background: linear-gradient(135deg, var(--text), var(--blue));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: slideUp 0.7s 0.1s ease both;
        }

        .last-updated {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 0.88rem;
            color: var(--muted);
            font-weight: 600;
            margin-bottom: 40px;
            padding: 8px 16px;
            background: var(--dark3);
            border: 1px solid var(--border);
            border-radius: 50px;
            animation: slideUp 0.7s 0.2s ease both;
        }

        .last-updated::before {
            content: 'üìÖ';
            font-size: 1.1rem;
        }

        /* Main paragraph */
        .main-body > p:first-of-type {
            font-size: 1.05rem;
            line-height: 1.8;
            color: rgba(221,238,255,0.9);
            margin-bottom: 50px;
            padding: 28px;
            background: var(--dark3);
            border-left: 4px solid var(--blue);
            border-radius: 10px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
            animation: slideUp 0.7s 0.3s ease both;
        }

        /* Section Headings */
        h2 {
            font-family: var(--font-display);
            font-size: clamp(1.8rem, 4vw, 2.5rem);
            letter-spacing: 2px;
            color: var(--blue);
            margin-top: 60px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            position: relative;
            padding-bottom: 12px;
        }

        h2::before {
            content: '';
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--blue), var(--cyan));
            border-radius: 2px;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, var(--blue), transparent);
            border-radius: 2px;
        }

        h3 {
            font-family: var(--font-body);
            font-size: clamp(1.2rem, 3vw, 1.5rem);
            font-weight: 800;
            color: var(--text);
            margin-top: 32px;
            margin-bottom: 16px;
            padding-left: 16px;
            border-left: 3px solid rgba(26,140,255,0.5);
        }

        /* Paragraphs */
        p {
            font-size: 0.98rem;
            line-height: 1.8;
            color: rgba(221,238,255,0.85);
           
        }

        p a {
            color: var(--blue);
            text-decoration: none;
            font-weight: 700;
            position: relative;
            transition: color 0.3s;
        }

        p a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--cyan);
            transition: width 0.3s;
        }

        p a:hover {
            color: var(--cyan);
        }

        p a:hover::after {
            width: 100%;
        }

        /* Lists */
        ul {
            padding-left: 20px;
        }

      

     

        li strong {
            color: var(--text);
            font-weight: 800;
        }

        /* Info Cards */
        .info-card {
            background: var(--dark3);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 24px;
            margin: 30px 0;
            position: relative;
            overflow: hidden;
            transition: all 0.3s;
        }

        .info-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--blue), var(--cyan));
            opacity: 0;
            transition: opacity 0.3s;
        }

        .info-card:hover {
            border-color: var(--border-hi);
            transform: translateY(-3px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.4);
        }

        .info-card:hover::before {
            opacity: 1;
        }

