        @media (max-width: 768px) {
            h2 {
                font-size: 1.8rem;
                margin-top: 40px;
            }

            .main-body {
                padding-top: 60px;
                padding-bottom: 40px;
            }

            .contact-links {
                flex-direction: column;
            }

            .contact-btn {
                width: 100%;
                justify-content: center;
            }

            .anime-character {
                font-size: 3rem;
            }
        }

        @media (max-width: 520px) {
            h1 {
                font-size: 2rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            .main-body > p:first-of-type {
                padding: 20px;
            }

            .info-card,
            .warning-box,
            .contact-section,
            .closing-statement {
                padding: 20px;
            }
        }

        /* ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
           DATE ELEMENT
