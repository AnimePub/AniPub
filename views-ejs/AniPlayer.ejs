    <title><%=video.Name %> | AniPub</title>
    <meta property="og:title" content="Watch <%=video.Name%> Online Free | AniPub">
<meta property="og:description" content="Watch <%=video.Name%> on AniPub. <%=video.DescripTion%>. Watch Ad free anime now!">
<meta property="og:site_name" content="AniPub">
 <% const POSTER = video.Cover;
                            const POSTERARY = POSTER.split("https://");
                            let LINKU = "";
                            if(POSTERARY.length > 1){
                                LINKU = "https://" + POSTERARY[1]; 
                            }
                            else {
                                 LINKU= "/"+POSTERARY[0]
                            }
                        %>
<meta property="og:image" content="<%=LINKU%>">
