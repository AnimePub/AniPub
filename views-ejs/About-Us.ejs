    <script>
        const GITHUB_REPO = 'AnimePub/AniPub';
        const GITHUB_API = 'https://api.github.com';

        // Animated counter
        function animateCounter(element, target, duration = 2000) {
            const start = 0;
            const increment = target / (duration / 16);
            let current = start;

            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = Math.ceil(target);
                    clearInterval(timer);
                } else {
                    element.textContent = Math.ceil(current);
                }
            }, 16);
        }

        // Fetch repository stats
        async function fetchRepoStats() {
            try {
                const [repoResponse, commitsResponse] = await Promise.all([
                    fetch(`${GITHUB_API}/repos/${GITHUB_REPO}`),
                    fetch(`${GITHUB_API}/repos/${GITHUB_REPO}/commits?per_page=1`)
                ]);

                const repoData = await repoResponse.json();
                const commitsLinkHeader = commitsResponse.headers.get('Link');
                
                // Parse total commits from Link header
                let totalCommits = 0;
                if (commitsLinkHeader) {
                    const match = commitsLinkHeader.match(/page=(\d+)>; rel="last"/);
                    totalCommits = match ? parseInt(match[1]) : 0;
                }

                const stats = document.querySelectorAll('.stat-number');
                const contributorsResponse = await fetch(`${GITHUB_API}/repos/${GITHUB_REPO}/contributors`);
                const contributors = await contributorsResponse.json();

                setTimeout(() => {
                    animateCounter(stats[0], repoData.stargazers_count || 0);
                    animateCounter(stats[1], repoData.forks_count || 0);
                    animateCounter(stats[2], Array.isArray(contributors) ? contributors.length : 0);
                    animateCounter(stats[3], totalCommits || 0);
                }, 500);

            } catch (error) {
                console.error('Error fetching stats:', error);
            }
        }

        // Fetch contributors
        async function fetchContributors() {
            try {
                const response = await fetch(`${GITHUB_API}/repos/${GITHUB_REPO}/contributors`);
                const contributors = await response.json();

                if (!Array.isArray(contributors) || contributors.length === 0) {
                    document.getElementById('contributorsGrid').innerHTML = `
                        <div style="text-align: center; padding: 60px; color: rgba(255,255,255,0.6);">
                            <p>No contributors found yet. Be the first to contribute!</p>
                        </div>
                    `;
                    return;
                }

                const contributorsHTML = await Promise.all(
                    contributors.map(async (contributor) => {
                        let userDetails = {};
                        try {
                            const userResponse = await fetch(contributor.url);
                            userDetails = await userResponse.json();
                        } catch (err) {
                            console.error('Error fetching user details:', err);
                        }

                        return `
                            <div class="contributor-card">
                                <img src="${contributor.avatar_url}" alt="${contributor.login}" class="contributor-avatar">
                                <h3 class="contributor-name">${userDetails.name || contributor.login}</h3>
                                <div class="contributor-stats">
                                    <div class="contributor-stat">
                                        <div class="contributor-stat-number">${contributor.contributions}</div>
                                        <div class="contributor-stat-label">Commits</div>
                                    </div>
                                    ${userDetails.public_repos ? `
                                    <div class="contributor-stat">
                                        <div class="contributor-stat-number">${userDetails.public_repos}</div>
                                        <div class="contributor-stat-label">Repos</div>
                                    </div>
                                    ` : ''}
                                </div>
                                <a href="${contributor.html_url}" target="_blank" class="contributor-link">
                                    View Profile ‚Üí
                                </a>
                            </div>
                        `;
                    })
                );

                document.getElementById('contributorsGrid').innerHTML = contributorsHTML.join('');

                // Animate cards
                const cards = document.querySelectorAll('.contributor-card');
                cards.forEach((card, index) => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(30px)';
                    setTimeout(() => {
                        card.style.transition = 'all 0.6s ease';
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, index * 100);
                });

            } catch (error) {
                console.error('Error fetching contributors:', error);
                document.getElementById('contributorsGrid').innerHTML = `
                    <div style="text-align: center; padding: 60px; color: #ff6b6b;">
                        <p>‚ö†Ô∏è Unable to load contributors. Please try again later.</p>
                    </div>
                `;
            }
        }

        // Create contribution graph
        async function createContributionGraph() {
            const canvas = document.getElementById('contributionGraph');
            const ctx = canvas.getContext('2d');
            
            // Set canvas size
            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;

            try {
                // Fetch commit activity data
                const response = await fetch(`${GITHUB_API}/repos/${GITHUB_REPO}/stats/commit_activity`);
                const data = await response.json();

                if (!Array.isArray(data)) {
                    throw new Error('Invalid data format');
                }

                // Get last 12 weeks
                const weeks = data.slice(-12);
                const maxCommits = Math.max(...weeks.map(w => w.total));
                
                const barWidth = (canvas.width / weeks.length) - 10;
                const maxBarHeight = canvas.height - 60;

                weeks.forEach((week, index) => {
                    const barHeight = (week.total / maxCommits) * maxBarHeight;
                    const x = index * (barWidth + 10);
                    const y = canvas.height - barHeight - 30;

                    // Color gradient based on activity
                    let color;
                    if (week.total > maxCommits * 0.7) {
                        color = '#00fff5'; // High activity
                    } else if (week.total > maxCommits * 0.3) {
                        color = '#4361ee'; // Medium activity
                    } else {
                        color = 'rgba(0, 255, 245, 0.3)'; // Low activity
                    }

                    // Draw bar with glow
                    ctx.shadowBlur = 15;
                    ctx.shadowColor = color;
                    ctx.fillStyle = color;
                    ctx.fillRect(x, y, barWidth, barHeight);

                    // Draw value on top
                    ctx.shadowBlur = 0;
                    ctx.fillStyle = '#fff';
                    ctx.font = '12px "Space Mono", monospace';
                    ctx.textAlign = 'center';
                    ctx.fillText(week.total, x + barWidth / 2, y - 10);

                    // Draw week label
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.5)';
                    ctx.font = '10px "Space Mono", monospace';
                    const date = new Date(week.week * 1000);
                    const weekLabel = `${date.getMonth() + 1}/${date.getDate()}`;
                    ctx.fillText(weekLabel, x + barWidth / 2, canvas.height - 10);
                });

            } catch (error) {
                console.error('Error creating graph:', error);
                ctx.fillStyle = 'rgba(255, 107, 107, 0.7)';
                ctx.font = '16px "Exo 2", sans-serif';
                ctx.textAlign = 'center';
                ctx.fillText('Unable to load contribution data', canvas.width / 2, canvas.height / 2);
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            fetchRepoStats();
            fetchContributors();
            
            // Wait a bit before creating graph to ensure canvas is properly sized
            setTimeout(createContributionGraph, 1000);
        });

        // Handle resize
        window.addEventListener('resize', () => {
            setTimeout(createContributionGraph, 500);
        });

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
