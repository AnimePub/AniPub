<div class="sidebar">
            <div class="sidebar-header">
               <% if (userData.Gender=== "Male") { %>
                <img class="pfp-s" src="/ProfilePic/boys/<%=userData.Image%>" alt="<%=userData.Name%>'s Profile Pic" data-ALREADYPIC="<%=userData.Image%>">
                <% } else { %>
                    <img class="pfp-s" src="/ProfilePic/<%=userData.Image%>" alt="<%=userData.Name%>'s Profile Pic" data-ALREADYPIC="<%=userData.Image%>">
               <% } %>
                <div>
                    <h3><%= userData.Name %></h3>
                    <p><%= userData.userType %> </p>
                </div>
            </div>
         
            <div class="nav-item " data-value="privacy">
                <i class="fas fa-shield-alt"></i>
                <span>Privacy</span>
            </div>
               <div class="nav-item" data-value="settings">
                <i class="fas fa-user-cog"></i>
                <span>Profile & Security</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-palette"></i>
                <span>Appearance</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-bell"></i>
                <span>Notifications</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-dollar-sign"></i>
                <span>Monetization</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-trash-alt"></i>
                <span>Account Deletion</span>
            </div>
        </div>
        <script>
           const pathName = (window.location.pathname).toLowerCase();
            const items = document.querySelectorAll(".nav-item");
            if(pathName === '/settings' ) {
                items[1].classList.add("active")
            }
            else if ( pathName === '/privacy') {
                 items[0].classList.add("active")
            }
            items.forEach(value=>{
                value.addEventListener('click',()=>{
                    const pathToGo = value.dataset.value ;
                    window.location.href = `/${pathToGo}`
                })
            })
        </script>
