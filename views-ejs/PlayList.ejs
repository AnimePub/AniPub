<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Playlist | AniPub</title>
    <meta name="description" content="Your personal anime playlist - A Free Anime Watching Site built by Anime Lovers for Anime Lovers">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Ubuntu:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/videoPlayerHeader.css">
    <link rel="stylesheet" href="/JPlayList.css">
    <link rel="stylesheet" href="/body-scrollbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <%- include("./include/nHeader") %>

    <main class="container">
        <div class="page-header">
            <h1 class="page-title">My Anime Playlist</h1>
            <div class="filter-options">
                <button class="filter-btn active">All</button>
                <button class="filter-btn">Watching</button>
                <button class="filter-btn">Completed</button>
            </div>
        </div>

        <div class="playlist-grid" id="anime-list">
            <% if (AniArray.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon"><i class="fas fa-tv"></i></div>
                <h2 class="empty-title">Your playlist is empty</h2>
                <p class="empty-desc">
                    It looks like you haven't added any anime to your playlist yet.
                    Start building your collection by browsing our library and adding your favorites.
                </p>
                <a href="/Home" class="browse-btn">Browse Anime Library</a>
            </div>
            <% } else { %>
                <% AniArray.forEach(value => { %>
 <%     const anime = AniDB.find(a => a._id.toString() === value.AniID.toString());
             if (!anime) return;
             const totalEpisodes = anime.ep ? anime.ep.length +1 : 0;
             const ALU = Number(value.Progress)+1;
            const percent = (ALU/totalEpisodes)*100;
             const progress = Math.round(percent);

             const status = progress === 0 ? 'Plan to Watch' : (progress < 100 ? 'Watching' : 'Completed');
        %>

            <div class="anime-card" data-anime="<%=value.AniID%>" data-ep="<%=value.AniEP%>" data-status="<%=status.toLowerCase()%>">
                <div class="card-header">
                    <% const POSTER =  anime.ImagePath;
                            const POSTERARY = POSTER.split("https://");
                            let LINKU = "";
                            if(POSTERARY.length > 1){
                                LINKU = "https://" + POSTERARY[1]; 
                            }
                            else {
                                 LINKU= "/"+POSTERARY[0]
                            }  %>
                    <img src="<%=LINKU%>" alt="<%= anime.Name %>" class="poster">

                    <span class="anime-status"><%= status %></span>
                </div>
                <div class="card-body">
                    <h3 class="anime-title"><%= anime.Name %></h3>
                    <div class="anime-info">
                        <div><i class="fas fa-star"></i> Ratings: &nbsp;<span><%= anime.RatingsNum %></span></div>
                        <div><i class="fas fa-calendar"></i> Added: &nbsp;<span><%= new Date(value.Date).toDateString() %></span></div>
                        <div><i class="fas fa-film"></i> Studios: &nbsp;<span><%= anime.Studios %></span></div>
                        <div><i class="fas fa-tags"></i> Genres: &nbsp;<span><%= anime.Genres.join(", ") %></span></div>

                    </div>
                    <div class="progress-container">
                        <div class="progress-info">
                            <span>Episode <%= ALU %> of <%= totalEpisodes %></span>
                            <% const finalP = Math.round(percent) %>
                            <span><%=finalP%>%</span>
                        </div>
                        <div class="progress-bar">
                            <!-- The Error in this I have to fix it later -->
                            <div class="progress-fill" data-prg="<%=percent%>"></div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/AniPlayer/<%=value.AniID%>/<%=Number(value.Progress)%>" class="action-btn watch-btn" style="text-decoration: none;">
                            <i class="fas fa-play"></i> <%= finalP === 100 ? 'Rewatch' : 'Continue' %>
                        </a>
                        <button type="submit" class="action-btn remove-btn remove-button" data-del="<%=value.id%>">
                            <i class="fas fa-trash"></i> Remove
                        </button>
                    </div>
                </div>
            </div>
              <%  }); %>
                <% } %> 


        </div>

    </main>


    <%- include("./include/footer") %>
    <script src="/deleteList.js"></script>

    <script>
        if(document.querySelector(".anime-card")){
            document.querySelectorAll(".progress-fill").forEach(value=>{
                const data = value.dataset.prg;
                value.style.width = data + "%"
            })
        }
    </script>
</body>

</html>