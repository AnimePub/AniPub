<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AniPub</title>
    <meta name="description" content="Home Page - A Free Anime Watching Site built by Anime Loves for Anime Lovers">

    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="/third-section.css">
    <link rel="stylesheet" href="/home-main.css">
    <link rel="stylesheet" href="/footer.css">

</head>

<body > <!--onload="CheckAuth();"-->

    <%- include("./include/haHeader.ejs") %> 

    <div class="secoNd-Section">

        <div class="aniLists">
            <% Anime.forEach(value => {%>
                <div class="Profile-div">
                    <div class="Profile" data-anime="<%=value._id%>">
                    <div class="Image-div">
                        <img class="poster" src="<%=value.poster%>" alt="<%=value.Name%> Anime Poster">
                    </div>
                    <div class="Title-div"><p class="Title"><%=value.Name%></p></div>
                    <div class="ratings-div">
                        <p class="mal-score"><%=value.MALScore%></p>
                        <img src="rating-<%=value.RatingsNum%>.png" alt="Rating Star Image">
                    </div>
                    <div class="des-div">
                        <p class="des">
                        <%=value.DescripTion%>
                        </p>
                    </div>
                </div>
                </div>
           <% }); %> 
        </div>
   

    
        
    
    
    
    </div>


    <footer>
       
        
    
    </footer>
   
